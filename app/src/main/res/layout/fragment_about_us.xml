                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dev3"
                tools:ignore="ContentDescription" />

            <TextView android:id="@+id/aboutMe3"
                android:layout_width="310sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myPhoto3"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:gravity="center"
                android:text="Revati Barge is an Engineer who completed her engineering from Ramrao Adik Institue of Technology under the Department of Information Technology."
                android:textColor="#212121"
                android:textSize="17sp" />
            <TextView android:id="@+id/aboutApp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aboutMe3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAlignment="center"
                android:text="E-mail : revatibarge2026@gmail.com"
                android:textColor="#212121"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>